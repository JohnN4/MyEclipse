 */
public class SwapInt {

	/**
	 * @param args
	 */
	public static void main(String[] args) {
//		int a[]= {12,31,82,24,1,17,3,99,81,16};
//		int min=0;
//		int max = a.length-1;
//		while(min < max)
//		{
//			int lowestArr = a[min];
//			int highestArr = a[max];
//			a[min]=highestArr;
//			a[max]=lowestArr;
//			
//			lowestArr += 1;
//			highestArr -= 1;

		int a[] = { 12, 31, 82, 24, 1, 17, 3, 99, 81, 16 };
		int temp;
		for (int i = 0; i < a.length; i++) {
			System.out.print(a[i] + " ");
			// System.out.println();
			for (int x = i + 1; x < a.length; x++) {
				if (a[i] > a[x]) {
					temp = a[i];
					a[i] = a[x];
					a[x] = temp;
				}
			}
			System.out.print(a[i] + " ");

		}

	}

}
